<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit <%= set.name %> - LEGO Set</title>
    <link rel="stylesheet" href="/css/main.css"> <!-- Your Tailwind CSS or custom styles -->
</head>

<body>
    <!-- Include Navbar (with an empty page value) -->
    <%- include('partials/navbar', { page: '' }) %> <!-- Empty page value since this is not a navbar page -->

    <!-- Main Content -->
    <div class="container mx-auto mt-8">
        <!-- Hero Section -->
        <div class="hero bg-base-200 min-h-[50vh]">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Edit LEGO Set: <%= set.name %></h1>
                    <p class="py-6">Below, you can edit the details or delete this LEGO set: <%= set.name %>.</p>
                </div>
            </div>
        </div>

        <!-- Edit Set Form -->
        <form action="/lego/editSet" method="POST" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            
            <!-- Set Name -->
            <div class="mb-6">
                <label for="name" class="block text-gray-700 font-medium">Set Name:</label>
                <input type="text" name="name" value="<%= set.name %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>

            <!-- Year -->
            <div class="mb-6">
                <label for="year" class="block text-gray-700 font-medium">Year:</label>
                <input type="number" name="year" value="<%= set.year %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>

            <!-- Number of Parts -->
            <div class="mb-6">
                <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts:</label>
                <input type="number" name="num_parts" value="<%= set.num_parts %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>

            <!-- Image URL -->
            <div class="mb-6">
                <label for="img_url" class="block text-gray-700 font-medium">Image URL:</label>
                <input type="url" name="img_url" value="<%= set.img_url %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>

            <!-- Theme Selection -->
            <div class="mb-6">
                <label for="theme_id" class="block text-gray-700 font-medium">Theme:</label>
                <select name="theme_id" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? "selected" : "" %>><%= theme.name %></option>
                    <% }); %>
                </select>
            </div>

            <!-- Set Number (Read-only) -->
            <div class="mb-6">
                <label for="set_num" class="block text-gray-700 font-medium">Set Number:</label>
                <input type="text" name="set_num" value="<%= set.set_num %>" readonly class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 cursor-not-allowed">
            </div>

            <!-- Submit Button -->
            <div class="mb-6">
                <button type="submit" class="btn btn-success w-full py-2 text-white">Update Set</button>
            </div>
        </form>
 <!-- Delete Button -->
 <form action="/lego/deleteSet/<%= set.set_num %>" method="GET" class="mt-4">
    <button type="submit" class="btn btn-error">Delete Set</button>
</form>
        <!-- Back Button -->
        <div class="mb-6">
            <a href="/lego/sets" class="btn btn-primary w-full py-2 text-white">Back to Sets</a>
        </div>
    </div>

</body>

</html>
