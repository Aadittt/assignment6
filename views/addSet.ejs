<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Set</title>
</head>
<body>
    <h1>Add a New LEGO Set</h1>
    <form action="/lego/addSet" method="POST">
        <label for="name">Set Name:</label>
        <input type="text" name="name" required>
        <br>
        <label for="year">Year:</label>
        <input type="number" name="year" required>
        <br>
        <label for="num_parts">Number of Parts:</label>
        <input type="number" name="num_parts" required>
        <br>
        <label for="img_url">Image URL:</label>
        <input type="url" name="img_url" required>
        <br>
        <label for="theme_id">Theme:</label>
        <select name="theme_id" required>
            <% themes.forEach(theme => { %>
                <option value="<%= theme.id %>"><%= theme.name %></option>
            <% }); %>
        </select>
        <br>
        <label for="set_num">Set Number:</label>
        <input type="text" name="set_num" required>
        <br>
        <button type="submit">Add Set</button>
    </form>
</body>
</html>
